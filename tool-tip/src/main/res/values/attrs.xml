<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- default style for theme -->
    <attr name="tt_defaultStyle" format="reference" />

    <!-- default style -->
    <declare-styleable name="TooltipLayout">
        <attr name="tt_padding" format="dimension" />
        <attr name="tt_strokeColor" format="color" />
        <attr name="tt_backgroundColor" format="color" />
        <attr name="tt_strokeWeight" format="dimension" />
        <attr name="tt_cornerRadius" format="dimension" />
        <attr name="tt_arrowRatio" format="float" />
        <attr name="tt_overlayStyle" format="reference" />
        <attr name="tt_font" format="string" />
        <attr name="tt_animationStyle" format="reference" />

        <!-- text view style -->
        <attr name="tt_textStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="TooltipOverlay">
        <attr name="android:color" />
        <attr name="android:alpha" />
        <attr name="tt_repeatCount" format="integer" />
        <attr name="tt_duration" format="integer" />
        <attr name="android:layout_margin" />
    </declare-styleable>
</resources>